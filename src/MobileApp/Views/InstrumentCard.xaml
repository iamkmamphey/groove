<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Views.InstrumentCard">
  <Frame CornerRadius="8" Padding="8" Margin="6" BackgroundColor="#FFFFFF">
    <Grid ColumnDefinitions="80,*,40" RowDefinitions="Auto,Auto,50">
      <Image Grid.RowSpan="2" Grid.Column="0" Source="icon_placeholder.png" WidthRequest="64" HeightRequest="64"/>
      <Label Grid.Column="1" Text="Instrument Name" FontAttributes="Bold" FontSize="16"/>
      <StackLayout Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Spacing="8" VerticalOptions="Center">
        <Button Text="-" WidthRequest="38" />
        <Label Text="120" VerticalTextAlignment="Center" WidthRequest="60" HorizontalTextAlignment="Center"/>
        <Button Text="+" WidthRequest="38" />
        <Label Text="BPM" VerticalOptions="Center" Opacity="0.7"/>
      </StackLayout>
      <StackLayout Grid.Column="2" Grid.RowSpan="2" Orientation="Horizontal" HorizontalOptions="End">
        <Button Text="⏮" />
        <Button Text="▶" />
        <Button Text="⟲" />
        <Slider Minimum="0" Maximum="1" Value="0.8" WidthRequest="110"/>
      </StackLayout>
      <BoxView Grid.Row="2" Grid.ColumnSpan="3" HeightRequest="50" Color="#EEE" Margin="0,10,0,0"/>
    </Grid>
  </Frame>
</ContentView>
